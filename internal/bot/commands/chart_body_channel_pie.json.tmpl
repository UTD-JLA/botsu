{
  "version": "2",
  "width": 600,
  "height": 500,
  "devicePixelRatio": 1,
  "format": "png",
  "chart": {
    "type": "pie",
    "data": {
      "labels": {{.Labels}},
      "datasets": [
        {
          "data": {{.Values}}
        }
      ]
    },
    "options": {
      "legend": {
        "labels": {
          "fontColor": "#cccccc",
          "fontSize": 14
        }
      },
      "plugins": {
        "datalabels": {
          "display": "auto",
          "align": "bottom",
          "backgroundColor": "#ccc",
          "borderRadius": 3,
          "font": {
            "size": 18
          }
        }
      },
      "layout": {
        "padding": {
          "left": 20,
          "right": 20,
          "top": 20,
          "bottom": 20
        }
      }
    }
  }
}